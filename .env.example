# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
POSTGRES_URL=postgresql://user:password@host:5432/database?sslmode=require

# ========================================
# Authentication
# ========================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here-32-bytes-base64

# URLs for Better Auth
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# ========================================
# AI/ML Services
# ========================================
# Google Generative AI (Gemini) - for scoring
GOOGLE_GENERATIVE_AI_API_KEY=your-google-genai-api-key

# OpenAI - for Realtime API and transcription
OPENAI_API_KEY=your-openai-api-key

# Groq - for faster transcription (optional fallback)
GROQ_API_KEY=your-groq-api-key

# ========================================
# File Storage
# ========================================
# Vercel Blob for audio/media uploads
VERCEL_BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# ========================================
# Error Tracking
# ========================================
# Rollbar for error monitoring
NEXT_PUBLIC_ROLLBAR_ACCESS_TOKEN=your-rollbar-token
ROLLBAR_ENVIRONMENT=development

# ========================================
# Deployment
# ========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

