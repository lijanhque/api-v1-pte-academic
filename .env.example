# ===========================================
# PTE Academic API - Environment Configuration
# ===========================================
# Copy this file to .env.local for development
# Set these in your cloud provider's environment variables for production

# ===========================================
# DATABASE (Required)
# ===========================================
# PostgreSQL connection URL (Neon, Supabase, or other PostgreSQL provider)
POSTGRES_URL=postgresql://user:password@host:5432/database?sslmode=require

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# Better Auth secret key - generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here

# Application URL (no trailing slash)
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# ===========================================
# OAUTH PROVIDERS (Optional - for social login)
# ===========================================
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Facebook OAuth - https://developers.facebook.com/apps
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Apple OAuth - https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# ===========================================
# AI SERVICES (Required for AI features)
# ===========================================
# OpenAI API - https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google AI (Gemini) - https://aistudio.google.com/apikey
GOOGLE_GENAI_API_KEY=

# Groq API - https://console.groq.com/keys
GROQ_API_KEY=

# AssemblyAI - https://www.assemblyai.com/dashboard/
ASSEMBLYAI_API_KEY=

# ===========================================
# PAYMENT PROCESSING (Optional)
# ===========================================
# Polar - https://polar.sh/settings
POLAR_API_KEY=
POLAR_WEBHOOK_SECRET=

# ===========================================
# EMAIL SERVICE (Optional)
# ===========================================
# Resend - https://resend.com/api-keys
RESEND_API_KEY=

# ===========================================
# FILE STORAGE (Optional)
# ===========================================
# Vercel Blob - auto-configured on Vercel
BLOB_READ_WRITE_TOKEN=

# ===========================================
# MONITORING (Optional)
# ===========================================
# Rollbar - https://rollbar.com/settings/
ROLLBAR_TOKEN=

# ===========================================
# NODE.JS CONFIGURATION
# ===========================================
# Memory allocation for Node.js (in MB)
NODE_OPTIONS=--max-old-space-size=8192

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Set to 'production' for production deployments
NODE_ENV=development

# Port for the application (Cloud Run uses PORT env var)
PORT=3000
