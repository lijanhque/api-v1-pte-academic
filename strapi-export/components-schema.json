{
  "components": {
    "shared.author": {
      "collectionName": "components_shared_authors",
      "info": {
        "displayName": "Author",
        "description": "Author information for blog posts"
      },
      "options": {},
      "attributes": {
        "name": {
          "type": "string",
          "required": true
        },
        "avatar": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        }
      }
    },
    "shared.seo": {
      "collectionName": "components_shared_seos",
      "info": {
        "displayName": "SEO",
        "description": "SEO metadata for content"
      },
      "options": {},
      "attributes": {
        "metaTitle": {
          "type": "string",
          "maxLength": 60
        },
        "metaDescription": {
          "type": "text",
          "maxLength": 160
        },
        "keywords": {
          "type": "string"
        }
      }
    }
  }
}